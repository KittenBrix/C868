{
  "name": "capstone-api",
  "description": "api for serving data to capstone-front",
  "author": "Lucas Phillips",
  "license": "Copywrite",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start-dev": "nodemon -e js,json,html app.js",
    "start-devtools": "nodemon --inspect -e js,json,html app.js",
    "test": "mocha test/*.js",
    "lint": "eslint --ignore-pattern app-api/apidoc .",
    "apidoc": "apidoc -i app-api -o app-api/apidoc/apidoc",
    "pretty": "prettier --write --arrow-parens avoid --trailing-comma none --single-quote --print-width 120 'src/**/*.ts'",
    "check-pretty": "prettier --check --arrow-parens avoid --trailing-comma none --single-quote --print-width 120 'src/**/*.ts'",
    "dupe": "jscpd -f '**/*.js' -e '**/node_modules/**'",
    "spellcheck": "cspell '**/*.js'",
    "compile": "npm run tsc && node -r dotenv/config ./dist/app.js dotenv_config_path=./.env",
    "tsc": "tsc",
    "build": "npm run tsc && cd .. && cd varsity-portal-api-dist && git pull && rm -rf * && cp -R ../varsity-portal-api/dist/* ../varsity-portal-api/assets ../varsity-portal-api/package.json ../varsity-portal-api/package-lock.json . && git add -A && git commit -m 'Chore; prod' && git push && echo 'Done - prod'",
    "dev": "nodemon -e ts --exec \"npm run compile\""
  },
  "devDependencies": {
    "@types/http-status-codes": "^1.2.0",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.2",
    "@types/node": "^15.3.1",
    "http-status-codes": "^2.1.4",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "nodemon": "^2.0.7",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typeorm": "^0.2.32",
    "typescript": "^4.2.4"
  },
  "private": true,
  "engines": {
    "node": "~8.9.4"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0"
  }
}
