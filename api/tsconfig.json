{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["es2017","dom"],
        "rootDir": "./src",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "outDir": "./dist",
        "incremental": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        // "noUnusedLocals": true,
    },
    "exclude": ["node_modules"],
    "include": [
      "./src/**/*"
    ]
  }
  